<div class="row">
<div class="col-md-8 col-md-offset-2">
<h1>Postita uus fakt</h1>
<div>
    <form class="form-horizontal" action="/create-fact" method="POST">
    <div class="form-group">
        <label for="title" class="col-sm-2 control-label">Pealkiri:</span></label>
        <div class="col-sm-10">
        <input type="text" class="form-control" id="title" name="title" placeholder="Pealkiri">
        </div>
    </div>
    <div class="form-group">
        <label for="fakt" class="col-sm-2 control-label">Fakt: </label>
        <div class="col-sm-10">
        <textarea class="form-control" id="fakt" placeholder="Fakt" name = "fact"></textarea>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-default">Postita</button>
        </div>
    </div>
    </form>
</div>
</div>
</div>